<Window x:Class="MangosTEx.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
		xmlns:vm="clr-namespace:MangosTEx.ViewModels"
        Title="Mangos Translation Extractor"
        WindowStartupLocation="CenterScreen"
        Width="800" Height="600">
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="ViewModel" />
    </Window.Resources>

    <DockPanel DataContext="{StaticResource ViewModel}"
               LastChildFill="True">
        <DockPanel DockPanel.Dock="Top"
                   LastChildFill="False">
            <TextBlock DockPanel.Dock="Left"
                       Text="Database status : "
                       ToolTip="Click to update">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding UpdateConnexionStatusCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBlock>
            <TextBlock DockPanel.Dock="Left"
                       FontWeight="Bold"
                       ToolTip="{Binding ConnectionStatus.Message}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding CopyConnexionStatusToClipboardCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ConnectionStatus}" Value="{x:Null}">
                                <Setter Property="Text" Value="Checking..." />
                                <Setter Property="Foreground" Value="Orange" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ConnectionStatus.IsValid}" Value="True">
                                <Setter Property="Text" Value="Connected" />
                                <Setter Property="Foreground" Value="DarkGreen" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ConnectionStatus.IsValid}" Value="False">
                                <Setter Property="Text" Value="Error!" />
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Button DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Settings"
                    Command="{Binding OpenSettingsCommand}" />
        </DockPanel>
        <TabControl ItemsSource="{Binding TabList}"
                    SelectedItem="{Binding CurrentTab}">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding DataContext.DataViewModel,
                                              RelativeSource={RelativeSource AncestorType=TabControl}}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
